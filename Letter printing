import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    String s=sc.nextLine();
	    int n=sc.nextInt();
	    for(int i=0;i<n;i++){
	        char c=s.charAt(i);
	        for(int j=0;j<n;j++){
	           if(i==j || i+j==n-1)
	           System.out.print(c);
	            else
	            System.out.print(" ");
	        }
	        System.out.println("");
	    }
	}
}
